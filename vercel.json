{
  "version": 2,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/home", "destination": "/index.html" },
    { "source": "/contact", "destination": "/contact.html" },
    { "source": "/done", "destination": "/thankyou.html" },
    { "source": "/projects", "destination": "/work.html" }
  ],
  "redirects": [
    { "source": "/index.html", "destination": "/home", "permanent": true },
    { "source": "/contact.html", "destination": "/contact", "permanent": true },
    { "source": "/thankyou.html", "destination": "/done", "permanent": true },
    { "source": "/work.html", "destination": "/projects", "permanent": true },
    { "source": "/", "destination": "/home", "permanent": true }
  ],
  "errorPages": {
    "notFound": "/404.html"
  }
}
